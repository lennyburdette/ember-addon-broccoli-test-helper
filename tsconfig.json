{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2015",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "test/**/*.ts",
    "lib/**/*.ts"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": true
}
